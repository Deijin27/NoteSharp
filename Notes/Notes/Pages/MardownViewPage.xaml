<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Notes.Pages.MarkdownViewPage"
             xmlns:resources="clr-namespace:Notes.Resources"
             Title="{x:Static resources:AppResources.PageTitle_MarkdownView}">

    <ContentPage.Resources>
        
    </ContentPage.Resources>

    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="SelectCSS" Text="SelectCSS" Clicked="SelectCSS_Clicked" Order="Primary" >
            <ToolbarItem.IconImageSource>
                <FontImageSource FontFamily="{StaticResource FontFamily_MaterialDesignIconic}"
                                 Glyph="{StaticResource IconGlyph_CSS}"
                                 Size="24"
                                 Color="{DynamicResource ToolbarIconColor}"/>
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <Grid>
            <WebView x:Name="MarkdownWebView"
                     Navigating="MarkdownWebView_Navigating"
                     />
            <ActivityIndicator x:Name="activityIndicator" IsRunning="True"
                               HorizontalOptions="Center" VerticalOptions="Center" 
                               Color="{DynamicResource PrimaryAccentColor}"/> <!-- Color=""  -->
        </Grid>
    </ContentPage.Content>

</ContentPage>