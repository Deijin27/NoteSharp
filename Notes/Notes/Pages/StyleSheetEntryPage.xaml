<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Notes.Pages.StyleSheetEntryPage"
             Title="Custom CSS">

    <ContentPage.Resources>
        <!-- Implicit styles -->

        <Style TargetType="{x:Type Editor}">
            <Setter Property="BackgroundColor" 
                    Value="{DynamicResource AppBackgroundColor}" />
        </Style>
        
    </ContentPage.Resources>

    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="SaveButton" Text="Save" Clicked="OnSaveButtonClicked" Order="Primary">
            <ToolbarItem.IconImageSource>
                <FontImageSource FontFamily="{StaticResource FontFamily_MaterialDesignIconic}"
                                 Glyph="{StaticResource IconGlyph_Floppy}"
                                 Size="24"
                                 Color="{DynamicResource ToolbarIconColor}"/>
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
        <ToolbarItem x:Name="CopyButton" Text="Copy" Clicked="CopyButton_Clicked" Order="Primary">
            <ToolbarItem.IconImageSource>
                <FontImageSource FontFamily="{StaticResource FontFamily_MaterialDesignIconic}"
                                 Glyph="{StaticResource IconGlyph_Copy}"
                                 Size="24"
                                 Color="{DynamicResource ToolbarIconColor}"/>
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
        <ToolbarItem x:Name="ColorPickerButton" Text="Color Picker" Clicked="ColorPickerButton_Clicked" Order="Primary">
            <ToolbarItem.IconImageSource>
                <FontImageSource FontFamily="{StaticResource FontFamily_MaterialDesignIconic}"
                                 Glyph="{StaticResource IconGlyph_EyeDropper}"
                                 Size="24"
                                 Color="{DynamicResource ToolbarIconColor}"/>
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
        <ToolbarItem Text="Quick Test" Clicked="QuickTest_Clicked" Order="Primary">
            <ToolbarItem.IconImageSource>
                <FontImageSource FontFamily="{StaticResource FontFamily_MaterialDesignIconic}"
                                 Glyph="{StaticResource IconGlyph_Eye}"
                                 Size="24"
                                 Color="{DynamicResource ToolbarIconColor}"/>
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
        <ToolbarItem x:Name="DeleteButton" Text="Delete" Clicked="OnDeleteButtonClicked" Order="Secondary"/>
        <ToolbarItem Text="Settings" Clicked="OnSettingsButtonClicked" Order="Secondary"/>
    </ContentPage.ToolbarItems>

    <Grid x:Name="MainLayout">
        <ScrollView >
            <StackLayout>
                <Entry x:Name="NameEntry"
                       Text="{Binding Name}" 
                       Placeholder="Name" 
                       Margin="10, 10, 10, 0"
                       FontFamily="{StaticResource FontFamily_QuikscriptRoboto}"
                       />
                <Editor x:Name="TextEditor" 
                        Placeholder="Enter your CSS..."
                        Text="{Binding Text}"
                        VerticalOptions="FillAndExpand"
                        FontFamily="{StaticResource FontFamily_QuikscriptRoboto}"
                        Margin="10, 0, 10, 10"
                        />
            </StackLayout>
        </ScrollView>
    </Grid>

</ContentPage>