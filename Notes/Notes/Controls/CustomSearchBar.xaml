<?xml version="1.0" encoding="utf-8" ?>

<StackLayout xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Notes.Controls.CustomSearchBar"
             Orientation="Horizontal">

    <Label x:Name="searchIcon" 
           Text="{StaticResource IconGlyph_Search}"
           FontFamily="{StaticResource FontFamily_MaterialDesignIconic}"
           FontSize="24"
           WidthRequest="24"
           VerticalTextAlignment="Center"
           />

    <Entry x:Name="searchInput"
           TextChanged="searchInput_TextChanged"
           />

    <Button x:Name="closeButton"
            Text="{StaticResource IconGlyph_Close}" 
            FontFamily="{StaticResource FontFamily_MaterialDesignIconic}"
            FontSize="24"
            WidthRequest="24"
            Clicked="SendCloseClicked"
            BackgroundColor="Transparent"
            />

</StackLayout>